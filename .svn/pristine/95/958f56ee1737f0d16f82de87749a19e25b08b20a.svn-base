public class Player {
	public int latitude;
	public int longitude;
	public boolean flagHolder;
	public int team;
	public String name;
	
	public Player(int lat, int longi,String name,int team) {
		this.latitude=lat;
		this.longitude=longi;
		this.flagHolder=false;
		this.name=name;
		this.team=team;
	}
	
	public void setFlagHolder(boolean flag){
		this.flagHolder=flag;
	}
	
	public void setPosition(int lati,int longi){
		this.latitude=lati;
		this.longitude=longi;
	}
	
	
}
